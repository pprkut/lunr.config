{
  "name": "lunr/config",
  "description": "Lunr.Config is a library for configuration file access and loading.",
  "keywords": [ "configuration" ],
  "homepage": "https://github.com/M2Mobi/lunr.config",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "lunr/halo": "~0.7.0",
    "phpunit/phpunit": ">=8.5 <9.6"
  },
  "config": {
    "optimize-autoloader": true
  },
  "autoload": {
    "psr-4": {"Lunr\\Core\\": "src/Lunr/Core/"}
  }
}
