{
  "name": "lunr/config",
  "description": "Lunr.Config is a library for configuration file access and loading.",
  "keywords": [ "configuration" ],
  "homepage": "https://github.com/lunr-php/lunr.config",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "phpunit/phpunit": ">=10.5 <11.0",
    "mockery/mockery": "~1.5",
    "lunr/halo": "~0.11.0"
  },
  "config": {
    "optimize-autoloader": true
  },
  "autoload": {
    "psr-4": {"Lunr\\Core\\": "src/Lunr/Core/"}
  }
}
